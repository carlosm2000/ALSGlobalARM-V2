    "sqlServerName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[concat(parameters('deploymentId'), '-sql')]"
    },
    "elasticPoolName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[concat(parameters('deploymentId'), '-pool-01')]"
    },
    "coreSqlDatabaseName": {
