      "name": "[format('{0}/{1}', variables('keyVaultNameTidy'), 'sitecore-collection-shardmapmanager-database-username')]",
      "location": "[parameters('location')]",
      "dependsOn":[
        "[variables('keyvault_id')]"
      ],
      "properties": {
