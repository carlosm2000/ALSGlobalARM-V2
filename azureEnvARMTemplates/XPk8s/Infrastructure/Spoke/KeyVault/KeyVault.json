      "minLength": 2
    },
    "maPassword": {
      "type": "securestring",
      "minLength": 2
    },
    "maUser": {
      "type": "securestring",
      "minLength": 2
    },
    "masterPassword": {
      "type": "securestring",
      "minLength": 2
    },
    "masterUser": {
      "type": "securestring",
      "minLength": 2
    },
    "mediaSharedSecret": {
      "type": "securestring",
      "minLength": 2
    },
    "messagingPassword": {
      "type": "securestring",
      "minLength": 2
    },
    "messagingUser": {
      "type": "securestring",
      "minLength": 2
    },
    "processingenginePassword": {
      "type": "securestring",
      "minLength": 2
    },
    "processingengineUser": {
      "type": "securestring",
      "minLength": 2
    },
    "poolsPassword": {
      "type": "securestring",
      "minLength": 2
    },
    "poolsUser": {
      "type": "securestring",
      "minLength": 2
    },
    "tasksPassword": {
      "type": "securestring",
      "minLength": 2
    },
    "tasksUser": {
      "type": "securestring",
